# ~/.config/alacritty/alacritty.toml

# Terminal Emulator Settings
[window]
padding = { x = 20, y = 20 }
decorations = "full"

[scrolling]
history = 10000
multiplier = 3

# Setting zsh as the default shell
[shell]
program = "/bin/zsh"
args = ["-l"]

# Font
[font]
size = 10.0

[font.normal]
family = "JetBrains Mono"
style = "Medium"

[font.bold]
family = "JetBrains Mono"
style = "Bold"

[font.italic]
family = "JetBrains Mono"
style = "Italic"

[font.bold_italic]
family = "JetBrains Mono"
style = "Bold Italic"

# Cursor
[cursor]
style = "Beam"
blink_interval = 750
blink_timeout = 5
unfocused_hollow = false

# Colors
[colors.primary]
background = "#151515"
foreground = "#E8E3E3"

# Normal colors
[colors.normal]
black = "#151515"
red = "#B66467"
green = "#8C977D"
yellow = "#D9BC8C"
blue = "#8DA3B9"
magenta = "#A988B0"
cyan = "#8AA6A2"
white = "#E8E3E3"

# Bright colors
[colors.bright]
black = "#424242"
red = "#B66467"
green = "#8C977D"
yellow = "#D9BC8C"
blue = "#8DA3B9"
magenta = "#A988B0"
cyan = "#8AA6A2"
white = "#E8E3E3"

# Cursor colors
[colors.cursor]
text = "#151515"
cursor = "#E8E3E3"

# Selection colors
[colors.selection]
text = "#151515"
background = "#E8E3E3"

# Search colors
[colors.search]
matches = { foreground = "#151515", background = "#8C977D" }
focused_match = { foreground = "#151515", background = "#D9BC8C" }

# Если хотите прозрачность (раскомментируйте):
# [window]
# opacity = 0.8